#!/bin/bash

DIRECTORY="$(dirname "$(dirname "$( cd "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )")")"

function error {
  echo -e "\\e[91m$1\\e[39m"
  exit 1
}

"${DIRECTORY}/purge-installed" "$(dirname "$0")" || exit 1

( sudo flatpak uninstall org.telegram.desktop -y || flatpak uninstall org.telegram.desktop -y ) || error "Failed uninstalling Telegram!"

# remove menu shortcut
rm ~/.local/share/applications/telegram.desktop
